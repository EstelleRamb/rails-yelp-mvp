<h1>Voici tous les restaurants</h1>
<br>
<%= link_to 'Ajouter un restaurant', new_restaurant_path %>

<div id="restaurants">
  <%@restaurants.each do|restaurant|%>
    <h2><%= restaurant.name %></h2>
    <p><%= restaurant.address %></p>
    <p><%= restaurant.phone_number %></p>
    <p><%= link_to "Show this restaurant", restaurant %></p>
  <%end %>
</div>
